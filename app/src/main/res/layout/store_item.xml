<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/store_item_image_view"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/apple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/store_item_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="apple"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/store_item_image_view"
        app:layout_constraintEnd_toStartOf="@id/store_item_quantity_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/store_item_price_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs 10.0"
        android:textColor="#6A6868"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/store_item_image_view"
        app:layout_constraintEnd_toStartOf="@id/store_item_quantity_view"
        app:layout_constraintTop_toBottomOf="@id/store_item_name_text_view"/>

    <TextView
        android:id="@+id/store_item_discount_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 %"
        android:textColor="#6A6868"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/store_item_image_view"
        app:layout_constraintEnd_toStartOf="@id/store_item_quantity_view"
        app:layout_constraintTop_toBottomOf="@id/store_item_price_view" />

    <TextView
        android:id="@+id/store_item_quantity_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="#6A6868"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>